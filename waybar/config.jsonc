{
  "layer": "top",
  "position": "top",
  "modules-left": [
    "hyprland/workspaces",
    "keyboard-state"
  ],
  "modules-center": [
    "custom/notifications",
    "custom/media"
  ],
  "modules-right": [
    "pulseaudio",
    "bluetooth",
    "clock"
  ],
  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate"
  },
  "custom/media": {
    "exec": "playerctl -l | head -n1 | xargs -I{} sh -c 'playerctl -p {} metadata artist && playerctl -p {} metadata title && echo {}' | paste -sd '|' - | awk -F '|' '{ printf \"ðŸŽµ [%s] %s - %s\", $3, $1, $2 }' || echo 'ðŸŽµ No media'",
    "return-type": "text",
    "interval": 5,
    "tooltip": true
  },
  "custom/notifications": {
    "tooltip": false,
    "format": "ïƒ³",
    "exec": "swaync-client -c | grep -q 'Notifications: true' && echo 'ïƒ³' || echo 'ï‡¶'",
    "on-click": "swaync-client -C",
    "on-click-right": "swaync-client -t",
    "return-type": "text",
    "interval": 2
  },
  "pulseaudio": {
    "format": "ï€¨ {volume}%",
